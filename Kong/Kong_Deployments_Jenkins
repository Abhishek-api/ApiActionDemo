
pipeline{   
   agent any
   stages {
        //Checkout Git Repo
        stage('Checkout') {
            steps {
               sh 'echo Hello'
            }
            
        }
        //Lint the OpenAPI spec using Insomnia CLI
        stage('Lint OpenAPI Spec') {
            steps {
                sh 'cd /home/abhishek && ./inso --version'
            }
        }
        //Generate Kong configuration in declarative format
        stage('Generate Kong configuration in declarative format') {
            steps {
                sh 'inso generate config pipe1.yaml --type declarative -o new-kong.yaml'
            }
        }
        //Display the contents of the generated Kong configuration
        stage('open kong.yaml') {
            steps {
                sh 'cat new-kong.yaml'
            }
        }
 
        //Validate the Kong configuration using deck CLI
        stage('Validate the Kong configuration using deck CLI') {
            steps {
                sh 'deck validate -s new-kong.yaml'
            }
        }
        //Convert the Kong configuration to version 3.x using deck CLI
        stage('Convert kong declarative') {
            steps {
                
                sh 'yes | deck convert --from kong-gateway-2.x --to kong-gateway-3.x --input-file new-kong.yaml --output-file new1-kong.yaml'
            }
        } 
        //Deploy to Kong
        stage('Deploy to Kong') {
            steps {
                sh 'deck sync -s new1-kong.yaml --headers --kong-addr https://34.125.74.21:8445  kong-admin-token:password --tls-skip-verify'
            }
        }
   }
   post {
        always {
           deleteDir()
       }
    }
}
